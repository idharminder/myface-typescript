<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Users</h1>
<ol>
    <% results.forEach(function(user) {%>
        <li class="user">
            <img class="user-background" src= <%= user.coverImageUrl%> alt="coverImageUrl">
            <div class="user-profile">
                <img class="user-profile-image" src= <%= user.profileImageUrl%> alt="profileImageUrl">
                <div class="user-text">
                    <p class="user-name"><%=user.name%></p>
                    <p class="user-username"><%=user.username%></p>
                    <p class="user-email"><%=user.email%></p>
                </div>
            </div>
        </li>
    <% }); %>
</ol>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>